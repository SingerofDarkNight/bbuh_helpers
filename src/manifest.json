{
    "name": "BBUH!",
    "version": "0.0.6",
    "description": "BBUH! helpers.",
    "icons": {
        "16": "icons/icon16x16.png",
        "48": "icons/icon48x48.png",
        "128": "icons/icon128x128.png"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://bbs.bbuhot.com/*"],
        "js": ["js/user_info.js"]
    }, {
        "matches": [
            "https://bbs.bbuhot.com/thread-*-*-*.html",
            "https://bbs.bbuhot.com/forum.php?mod=viewthread*"
        ],
        "js": ["js/modify_thread.js"],
        "run_at": "document_start"
    }, {
        "matches": [
            "https://bbs.bbuhot.com/forum-*-*.html",
            "https://bbs.bbuhot.com/forum.php?mod=forumdisplay*"
        ],
        "js": ["js/modify_forum.js"],
        "run_at": "document_start"
    }, {
        "matches": [
            "https://bbs.bbuhot.com/thread-*.html",
            "https://bbs.bbuhot.com/*mod=viewthread*"
        ],
        "js": ["js/farm_kit.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://bbs.bbuhot.com/dsu_paulsign-sign.html"],
        "js": ["js/auto_sign.js"],
        "run_at": "document_end"
    }],
    "page_action": {
        "default_popup": "html/profiles.html",
        "default_icon": "icons/icon19x19.png"
    },
    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "https://bbs.bbuhot.com/*"
    ],
    "manifest_version": 2
}
